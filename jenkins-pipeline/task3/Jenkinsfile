pipeline {
    agent any
    environment {
        REGISTRY_NAME               = credentials('REGISTRY_NAME')
        DOCKER_REGISTRY_USERNAME    = credentials('DOCKER_REGISTRY_USERNAME')
        DOCKER_REGISTRY_PASSWORD    = credentials('DOCKER_REGISTRY_PASSWORD')
    }

    stages {
        stage('git-checkout') {
            steps {
                dir('app_code') {
                    git url: 'https://github.com/hoabka/nodejs-demo.git'
                }
            }
        }
        stage('docker-build/push-registry') {
            steps {
                sh '''#!/usr/bin/env bash
                cd app_code
                docker login -u ${DOCKER_REGISTRY_USERNAME} -p ${DOCKER_REGISTRY_PASSWORD}
                docker build --tag "${REGISTRY_NAME}/nodejs-demo:v${BUILD_NUMBER}" .
                docker push "${REGISTRY_NAME}/nodejs-demo:v${BUILD_NUMBER}"
                docker rmi "${REGISTRY_NAME}/nodejs-demo:v${BUILD_NUMBER}"
                '''
            }
        }
    }
}